<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:baselineAligned="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#84000000"
        android:layout_gravity="top"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_title"
            android:id="@+id/textView"
            android:textColor="#ffffffff"
            android:textSize="22dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:textIsSelectable="true"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#45000000"
        android:divider="#ff000000"
        android:dividerPadding="5dp"
        android:focusable="true"
        android:id="@+id/linear1"
        android:baselineAligned="false"
        android:showDividers="beginning|end"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to the Speech!"
            android:id="@+id/textView2"
            android:textSize="25dp"
            android:textColor="#ffffffff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Title: null"
            android:id="@+id/speech_title"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffffff"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speaker: null"
            android:id="@+id/speaker_name"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffffff"
            android:typeface="serif" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#45000000"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="left"
            android:id="@+id/likeLayout">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/like_img_btn"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/like_final2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#45000000"
            android:layout_marginLeft="1dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:layout_gravity="top"
            android:id="@+id/dislikeLayout">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/dislike_img_btn"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/dislike_final" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#45000000"
        android:layout_marginTop="1dp"
        android:id="@+id/whatever"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Send comments/questions!"
            android:id="@+id/display_username"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffffff"
            android:typeface="serif" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_username"
            android:autoText="false"
            android:hint="Enter username"
            android:textColorHint="#ffc4c4c4"
            android:textColor="#ffcecece"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext"
            android:textSize="25dp"
            android:singleLine="true"
            android:typeface="serif"
            android:layout_marginBottom="5dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/enter_comments"
            android:autoText="false"
            android:hint="Enter a comment/question"
            android:textColorHint="#ffc4c4c4"
            android:textColor="#ffcecece"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext"
            android:textSize="25dp"
            android:singleLine="true"
            android:typeface="serif" />

        <Button
            android:id="@+id/send_comments_btn"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/send_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</LinearLayout>
